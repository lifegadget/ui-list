<h4>Interactive Demo</h4>
<row>
  <widget>
    {{ui-item
      icon=toggledIcon
      image=image
      foo=foo
      icon=icon
      mapTitle='foo'
      bar=bar
      mapSubHeading="bar"
      badge=toggledBadge
      size=size
      disabled=disabled
      selected=selected
      skin=skin
      mood=mood
      badge=badge
      squeezed=squeezed
    }}
  </widget>
  <code>
    {{display-component componentName='ui-item'
      icon=icon
      image=image
      foo=foo
      mapTitle='foo'
      bar=bar
      mapSubHeading="bar"
      badge=toggledBadge
      size=size
      disabled=disabled
      selected=selected
      skin=skin
      mood=mood
      badge=badge
      squeezed=squeezed
    }}
  </code>
  <description>
    Use the controls below to manipulate the item:
    <controls>
      <control>
        <span class='name'>foo -> title</span>
        <span>{{text-input placeholder='title' value=foo}}</span>
      </control>
      <control>
        <span class='name'>bar -> subHeading</span>
        <span>{{text-input placeholder='subHeading' value=bar}}</span>
      </control>
      <control>
        <span>mood</span>
        <span>{{radio-buttons buttons='default,success,info,warning,error,aged,ancient' size='small' value=mood}}</span>
      </control>
      <control>
        <span class='name'>skin</span>
        <span>{{radio-buttons buttons='default,plus,flat,simple' value=skin size='small'}}</span>
      </control>
      <control>
        <span class='name'>state</span>
        <span>{{ui-toggle-button value=disabled size='small'}} - DISABLED</span>
        <span>{{ui-toggle-button value=selected size='small'}} - SELECTED</span>
        <span>{{ui-toggle-button value=squeezed size='small'}} - SQUEEZED</span>
      </control>
      <control>
        <span class='name'>aspects</span>
        <span>{{ui-toggle-button value=icon onValue='umbrella' size='small'}} - ICON</span>
        <span>{{ui-toggle-button value=badge onValue=5 size='small'}} - BADGE</span>
        <span>{{ui-toggle-button value=showImage onValue=5 size='small'}} - IMAGE</span>
      </control>
    </controls>
  </description>
</row>

